<camelContext xmlns="http://camel.apache.org/schema/spring">
    <route>
        <from uri="file:src/main/resources/LegacySystemData" />
        <convertBodyTo type="java.lang.String" />
        <split>
            <tokenize token="\n" />
            <process ref="legacyToCRMTransformer" />
            <to uri="file:src/main/resources/CRMSystemData" />
        </split>
    </route>
</camelContext>
